<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-slate-100">
  <div class="container mx-auto px-3 sm:px-4 lg:px-6 py-6 lg:py-10 max-w-[1800px]">

    <!-- Header Section -->
    <div class="mb-6 lg:mb-10">
      <div class="flex items-center gap-3 mb-3">
        <div class="w-1 h-12 bg-gradient-to-b from-blue-600 to-purple-600 rounded-full"></div>
        <div>
          <h1 class="text-3xl sm:text-4xl lg:text-5xl font-black text-gray-900 tracking-tight">
            Weekly High Score Basketball
          </h1>
          <p class="text-base sm:text-lg text-gray-600 font-medium mt-1">2024-25 NBA Season Draft Analysis</p>
        </div>
      </div>
      <div class="flex items-center gap-2 mt-4 px-1">
        <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
        <p class="text-xs sm:text-sm text-gray-600 font-medium">
          <span class="font-bold text-gray-800">Scoring:</span> Points + Rebounds + (2 × Assists) + (3 × Blocks) + (3 × Steals)
        </p>
      </div>
    </div>

    <!-- Mobile scroll hint -->
    <div class="lg:hidden mb-3 flex items-center justify-center gap-2 text-sm text-gray-600 bg-white/60 backdrop-blur-sm py-2 px-4 rounded-lg border border-gray-200">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"/>
      </svg>
      <span class="font-medium">Swipe to see all stats</span>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
      </svg>
    </div>

    <!-- Main Table -->
    <div class="bg-white rounded-xl sm:rounded-2xl shadow-2xl overflow-hidden border border-gray-200">
      <div class="overflow-x-auto" style="max-height: calc(100vh - 200px);" class="overflow-y-auto">
        <table class="min-w-full" data-controller="sortable-table">
          <thead class="sticky top-0 z-20 shadow-md">
            <!-- Column group labels -->
            <tr class="border-b-2 border-gray-300 bg-gradient-to-r from-gray-50 to-slate-100">
              <th colspan="3" class="px-4 sm:px-5 py-3 sm:py-4 text-xs font-black text-gray-700 uppercase tracking-wider text-left">
                <div class="flex items-center gap-2">
                  <div class="w-1 h-6 bg-gray-400 rounded-full"></div>
                  Player Info
                </div>
              </th>
              <th colspan="4" class="px-4 sm:px-5 py-3 sm:py-4 text-xs font-black text-blue-800 uppercase tracking-wider text-center bg-gradient-to-r from-blue-50 to-indigo-50 border-l-4 border-blue-400">
                <div class="flex items-center justify-center gap-2">
                  <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                  Draft Value Metrics
                </div>
              </th>
              <th colspan="4" class="px-4 sm:px-5 py-3 sm:py-4 text-xs font-black text-gray-700 uppercase tracking-wider text-center bg-gradient-to-r from-slate-50 to-gray-100 border-l-4 border-gray-300">
                <div class="flex items-center justify-center gap-2">
                  <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                  </svg>
                  Supporting Stats
                </div>
              </th>
            </tr>

            <!-- Column headers -->
            <tr class="bg-gradient-to-r from-gray-100 via-slate-50 to-gray-100 border-b-2 border-gray-300">
              <!-- Player Info -->
              <th scope="col" class="sticky left-0 z-10 bg-gray-100 px-2 sm:px-3 py-3 sm:py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wide cursor-pointer hover:bg-gray-200 transition-all group"
                  data-action="click->sortable-table#sort" data-column="rank">
                <div class="flex items-center gap-1">
                  <span class="hidden sm:inline">Rank</span>
                  <span class="sm:hidden">#</span>
                  <svg class="w-3 h-3 text-gray-400 group-hover:text-gray-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                  </svg>
                </div>
              </th>
              <th scope="col" class="px-4 sm:px-5 py-3 sm:py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wide cursor-pointer hover:bg-gray-200 transition-all group"
                  data-action="click->sortable-table#sort" data-column="player">
                <div class="flex items-center gap-1">
                  Player Name
                  <svg class="w-3 h-3 text-gray-400 group-hover:text-gray-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                  </svg>
                </div>
              </th>
              <th scope="col" class="px-3 sm:px-4 py-3 sm:py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wide cursor-pointer hover:bg-gray-200 transition-all group"
                  data-action="click->sortable-table#sort" data-column="team">
                <div class="flex items-center gap-1">
                  Team
                  <svg class="w-3 h-3 text-gray-400 group-hover:text-gray-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                  </svg>
                </div>
              </th>

              <!-- Draft Value Metrics (most important) -->
              <th scope="col" class="px-4 sm:px-5 py-3 sm:py-4 text-center text-xs font-black text-blue-800 uppercase tracking-wide cursor-pointer hover:bg-blue-100 transition-all border-l-4 border-blue-400 group"
                  data-action="click->sortable-table#sort" data-column="variance" title="Boom/bust potential - higher is better for weekly format">
                <div class="flex flex-col items-center gap-1">
                  <div class="flex items-center gap-1">
                    <span>Variance</span>
                    <svg class="w-3 h-3 text-blue-500 group-hover:text-blue-700 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                    </svg>
                  </div>
                  <span class="text-[10px] text-blue-600 font-normal normal-case">Boom/Bust</span>
                </div>
              </th>
              <th scope="col" class="px-4 sm:px-5 py-3 sm:py-4 text-center text-xs font-black text-blue-800 uppercase tracking-wide cursor-pointer hover:bg-blue-100 transition-all group"
                  data-action="click->sortable-table#sort" data-column="differential" title="Gap between weekly high and average score">
                <div class="flex flex-col items-center gap-1">
                  <div class="flex items-center gap-1">
                    <span>Upside</span>
                    <svg class="w-3 h-3 text-blue-500 group-hover:text-blue-700 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                    </svg>
                  </div>
                  <span class="text-[10px] text-blue-600 font-normal normal-case">High - Avg</span>
                </div>
              </th>
              <th scope="col" class="px-4 sm:px-5 py-3 sm:py-4 text-center text-xs font-black text-blue-800 uppercase tracking-wide cursor-pointer hover:bg-blue-100 transition-all group"
                  data-action="click->sortable-table#sort" data-column="avg_high" title="Average of best weekly scores">
                <div class="flex flex-col items-center gap-1">
                  <div class="flex items-center gap-1">
                    <span class="whitespace-nowrap">Avg High</span>
                    <svg class="w-3 h-3 text-blue-500 group-hover:text-blue-700 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                    </svg>
                  </div>
                  <span class="text-[10px] text-blue-600 font-normal normal-case">Weekly Best</span>
                </div>
              </th>
              <th scope="col" class="px-4 sm:px-5 py-3 sm:py-4 text-center text-xs font-black text-blue-800 uppercase tracking-wide cursor-pointer hover:bg-blue-100 transition-all group"
                  data-action="click->sortable-table#sort" data-column="peak" title="Best single week performance">
                <div class="flex flex-col items-center gap-1">
                  <div class="flex items-center gap-1">
                    <span>Peak</span>
                    <svg class="w-3 h-3 text-blue-500 group-hover:text-blue-700 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                    </svg>
                  </div>
                  <span class="text-[10px] text-blue-600 font-normal normal-case">Best Week</span>
                </div>
              </th>

              <!-- Context Stats (secondary) -->
              <th scope="col" class="px-4 sm:px-5 py-3 sm:py-4 text-center text-xs font-bold text-gray-700 uppercase tracking-wide cursor-pointer hover:bg-gray-200 transition-all border-l-4 border-gray-300 group"
                  data-action="click->sortable-table#sort" data-column="avg_score" title="Season average per game">
                <div class="flex flex-col items-center gap-1">
                  <div class="flex items-center gap-1">
                    <span class="whitespace-nowrap">Avg/Game</span>
                    <svg class="w-3 h-3 text-gray-400 group-hover:text-gray-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                    </svg>
                  </div>
                </div>
              </th>
              <th scope="col" class="px-3 sm:px-4 py-3 sm:py-4 text-center text-xs font-bold text-gray-700 uppercase tracking-wide cursor-pointer hover:bg-gray-200 transition-all group"
                  data-action="click->sortable-table#sort" data-column="weeks" title="Weeks with games played">
                <div class="flex flex-col items-center gap-1">
                  <div class="flex items-center gap-1">
                    <span>Weeks</span>
                    <svg class="w-3 h-3 text-gray-400 group-hover:text-gray-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                    </svg>
                  </div>
                </div>
              </th>
              <th scope="col" class="px-3 sm:px-4 py-3 sm:py-4 text-center text-xs font-bold text-gray-700 uppercase tracking-wide cursor-pointer hover:bg-gray-200 transition-all group"
                  data-action="click->sortable-table#sort" data-column="games_played">
                <div class="flex flex-col items-center gap-1">
                  <div class="flex items-center gap-1">
                    <span>GP</span>
                    <svg class="w-3 h-3 text-gray-400 group-hover:text-gray-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                    </svg>
                  </div>
                </div>
              </th>
              <th scope="col" class="px-4 sm:px-5 py-3 sm:py-4 text-center text-xs font-bold text-gray-700 uppercase tracking-wide cursor-pointer hover:bg-gray-200 transition-all group"
                  data-action="click->sortable-table#sort" data-column="floor" title="Worst weekly score">
                <div class="flex flex-col items-center gap-1">
                  <div class="flex items-center gap-1">
                    <span>Floor</span>
                    <svg class="w-3 h-3 text-gray-400 group-hover:text-gray-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                    </svg>
                  </div>
                </div>
              </th>
            </tr>
          </thead>

          <tbody class="bg-white divide-y divide-gray-100" data-sortable-table-target="tbody">
            <% @players.each_with_index do |player, index| %>
              <% summary = player.player_summary %>
              <% row_bg = index.even? ? 'bg-white' : 'bg-gradient-to-r from-slate-50/30 to-blue-50/20' %>
              <tr class="<%= row_bg %> hover:bg-gradient-to-r hover:from-blue-100/50 hover:to-indigo-100/30 cursor-pointer transition-all duration-150 border-b border-gray-100 group"
                  onclick="window.location='<%= player_path(player) %>'">

                <!-- Player Info -->
                <td class="sticky left-0 z-10 <%= row_bg %> group-hover:bg-gradient-to-r group-hover:from-blue-100/50 group-hover:to-transparent px-2 sm:px-3 py-3 sm:py-4 whitespace-nowrap" data-value="<%= index + 1 %>">
                  <div class="flex items-center justify-center w-7 h-7 sm:w-8 sm:h-8 rounded-full bg-gradient-to-br from-slate-600 to-slate-800 text-white text-xs sm:text-sm font-black shadow-md">
                    <%= index + 1 %>
                  </div>
                </td>
                <td class="px-4 sm:px-5 py-3 sm:py-4 whitespace-nowrap" data-value="<%= player.name %>" onclick="event.stopPropagation()">
                  <%= link_to player.name, player_path(player),
                      class: "text-blue-700 hover:text-blue-900 font-bold text-sm sm:text-base hover:underline decoration-2 underline-offset-2 transition-all" %>
                </td>
                <td class="px-3 sm:px-4 py-3 sm:py-4 whitespace-nowrap" data-value="<%= player.team %>">
                  <span class="inline-block px-2 sm:px-2.5 py-1 text-xs font-black text-gray-700 uppercase tracking-wider bg-gray-100 rounded-md border border-gray-200">
                    <%= player.team %>
                  </span>
                </td>

                <!-- Draft Value Metrics -->
                <td class="px-4 sm:px-5 py-3 sm:py-4 whitespace-nowrap text-center border-l-4 border-blue-200" data-value="<%= summary.variance.round(1) %>">
                  <% variance_level = variance_class(summary.variance) %>
                  <div class="flex flex-col items-center gap-1.5">
                    <span class="px-3 sm:px-4 py-1.5 sm:py-2 inline-flex text-base sm:text-lg leading-none font-black rounded-lg <%= variance_level[:class] %> shadow-md border-2 <%= variance_level[:border] %>">
                      <%= summary.variance.round(1) %>
                    </span>
                    <span class="px-2 py-0.5 text-[10px] sm:text-xs font-black uppercase tracking-wider <%= variance_level[:badge_class] %> rounded">
                      <%= variance_level[:label] %>
                    </span>
                  </div>
                </td>
                <td class="px-4 sm:px-5 py-3 sm:py-4 whitespace-nowrap text-center" data-value="<%= summary.differential&.round(1) || 0 %>">
                  <% if summary.differential %>
                    <%
                      if summary.differential >= 12
                        diff_class = 'text-green-600'
                        diff_badge = 'bg-green-100 text-green-800 border-green-300'
                        diff_label = 'Elite'
                      elsif summary.differential >= 8
                        diff_class = 'text-blue-600'
                        diff_badge = 'bg-blue-100 text-blue-800 border-blue-300'
                        diff_label = 'Great'
                      elsif summary.differential >= 5
                        diff_class = 'text-indigo-600'
                        diff_badge = 'bg-indigo-100 text-indigo-800 border-indigo-300'
                        diff_label = 'Good'
                      else
                        diff_class = 'text-gray-600'
                        diff_badge = 'bg-gray-100 text-gray-600 border-gray-300'
                        diff_label = 'Low'
                      end
                    %>
                    <div class="flex flex-col items-center gap-1.5">
                      <span class="<%= diff_class %> text-xl sm:text-2xl font-black">
                        +<%= summary.differential.round(1) %>
                      </span>
                      <span class="px-2 py-0.5 text-[10px] sm:text-xs font-black uppercase tracking-wider <%= diff_badge %> rounded border">
                        <%= diff_label %>
                      </span>
                    </div>
                  <% else %>
                    <span class="text-gray-400 text-sm">-</span>
                  <% end %>
                </td>
                <td class="px-4 sm:px-5 py-3 sm:py-4 whitespace-nowrap text-center" data-value="<%= summary.avg_weekly_high.round(1) %>">
                  <span class="text-lg sm:text-xl text-gray-900 font-extrabold">
                    <%= summary.avg_weekly_high.round(1) %>
                  </span>
                </td>
                <td class="px-4 sm:px-5 py-3 sm:py-4 whitespace-nowrap text-center" data-value="<%= summary.peak_score %>">
                  <div class="flex flex-col items-center gap-1">
                    <span class="text-xl sm:text-2xl font-black bg-gradient-to-r from-green-600 to-emerald-600 bg-clip-text text-transparent">
                      <%= summary.peak_score %>
                    </span>
                    <span class="text-[10px] text-green-700 font-bold uppercase tracking-wider">Best</span>
                  </div>
                </td>

                <!-- Context Stats -->
                <td class="px-4 sm:px-5 py-3 sm:py-4 whitespace-nowrap text-center border-l-4 border-gray-200" data-value="<%= summary.avg_score&.round(1) || 0 %>">
                  <span class="text-sm sm:text-base text-gray-700 font-semibold">
                    <%= summary.avg_score&.round(1) || '-' %>
                  </span>
                </td>
                <td class="px-3 sm:px-4 py-3 sm:py-4 whitespace-nowrap text-center" data-value="<%= summary.non_zero_weeks %>">
                  <span class="text-sm sm:text-base text-gray-700 font-semibold">
                    <%= summary.non_zero_weeks %>
                  </span>
                </td>
                <td class="px-3 sm:px-4 py-3 sm:py-4 whitespace-nowrap text-center" data-value="<%= summary.games_played || 0 %>">
                  <span class="text-sm sm:text-base text-gray-700 font-semibold">
                    <%= summary.games_played || '-' %>
                  </span>
                </td>
                <td class="px-4 sm:px-5 py-3 sm:py-4 whitespace-nowrap text-center" data-value="<%= summary.floor_score %>">
                  <div class="flex flex-col items-center gap-1">
                    <span class="text-base sm:text-lg font-bold text-red-600">
                      <%= summary.floor_score %>
                    </span>
                    <span class="text-[10px] text-red-600 font-bold uppercase tracking-wider">Worst</span>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>
